<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="480.0" prefWidth="800.0" stylesheets="@../css/search.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.HistorySceneController">
   <children>
      <AnchorPane prefHeight="80.0" prefWidth="800.0" stylesheets="@../css/search.css">
         <children>
            <TextField fx:id="txtSearch" layoutX="20.0" layoutY="20.0" onKeyReleased="#handleChangeInputSearch" prefHeight="46.0" prefWidth="660.0" styleClass="search-text" stylesheets="@../css/search.css" />
            <Button fx:id="searchButton" layoutX="700.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleSearchButton" prefHeight="46.0" prefWidth="80.0" styleClass="search-button" stylesheets="@../css/search.css" text="Search" />
         </children>
      </AnchorPane>
      <ListView fx:id="SearchListView" layoutX="20.0" layoutY="90.0" onMouseClicked="#SelectSearchListItem" prefHeight="370.0" prefWidth="250.0" stylesheets="@../css/search.css" />
      <WebView fx:id="webView" layoutX="280.0" layoutY="90.0" prefHeight="370.0" prefWidth="500.0" stylesheets="@../css/search.css" />
   </children>
</AnchorPane>

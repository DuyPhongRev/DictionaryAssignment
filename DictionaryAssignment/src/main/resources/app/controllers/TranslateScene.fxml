<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="480.0" prefWidth="800.0" style="-fx-background-color: #FBF5D5;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.TranslateSceneController">
   <children>
      <AnchorPane prefHeight="480.0" prefWidth="400.0">
         <children>
            <TextArea fx:id="SrcTextArea" layoutX="20.0" layoutY="120.0" onKeyReleased="#handleEvent" prefHeight="280.0" prefWidth="360.0" styleClass="text_area" stylesheets="@../css/translate.css" />
            <ChoiceBox fx:id="SrcLangChoiceBox" layoutX="20.0" layoutY="70.0" prefWidth="150.0" />
            <Button fx:id="SrcSoundButton" layoutX="20.0" layoutY="365.0" mnemonicParsing="false" onAction="#handleEvent">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="400.0" prefHeight="480.0" prefWidth="400.0">
         <children>
            <TextArea fx:id="DesTextArea" editable="false" layoutX="20.0" layoutY="120.0" prefHeight="280.0" prefWidth="360.0" styleClass="text_area" stylesheets="@../css/translate.css" />
            <ChoiceBox fx:id="DesLangChoiceBox" layoutX="20.0" layoutY="70.0" prefWidth="150.0" />
            <Button fx:id="DesSoundButton" layoutX="20.0" layoutY="365.0" mnemonicParsing="false" onAction="#handleEvent">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
